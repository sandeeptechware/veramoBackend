{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["express"]
  },
  "include": ["src/**/*"]
}
